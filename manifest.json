{
	"manifest_version": 2,
	"name": "Shrub",
	"version": "0.3.0",

	"permissions": [
		"activeTab",
		"webNavigation",
		"http://fonts.googleapis.com/",
		"https://fonts.googleapis.com/"
	],
	"icons": {
		"128": "icons/shrub-icon-128.png",
		"16": "icons/shrub-icon-16.png"
	},
	"content_scripts":[
		{
			"matches": ["<all_urls>"],
			"css": ["css/injector_style.css"],
			"js": ["js/injector.js"]
		}
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"web_accessible_resources": [
		"html/*",
		"/font/*"
	]
}
